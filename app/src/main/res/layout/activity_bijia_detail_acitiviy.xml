<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_bijia_detail_acitiviy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/bijia_title_background"
            android:gravity="center"
            android:text="比价明细"
            android:textColor="@color/color_white"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/bijiadetail_btn_add"
            style="@style/myButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableLeft="@mipmap/drable_add_bijia"
            android:layout_alignParentRight="true"
            android:background="@color/bijia_title_background"
            android:textColor="@color/color_white"
            android:text="新增比价"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/bijiadetail_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_black"
            android:dividerHeight="0dp"/>

        <TextView
            android:id="@+id/bijiadetail_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="暂无比价单，请查看其他单据"
            android:textSize="22sp"/>
    </RelativeLayout>

</LinearLayout>
